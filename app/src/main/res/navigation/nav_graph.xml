<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapFragment">

    <!--Youtube says that the errors saying "..is not a valid destination for tag.."
        are a bug in Android Studio and not a problem. The app runs. -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.activist_app.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_mapFragment_to_talkieFragment"
            app:destination="@id/talkieFragment" />
    </fragment>
    <fragment
        android:id="@+id/talkieFragment"
        android:name="com.example.activist_app.TalkieFragment"
        android:label="TalkieFragment" >
        <action
            android:id="@+id/action_talkieFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_talkieFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.activist_app.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_talkieFragment"
            app:destination="@id/talkieFragment" />
        <action
            android:id="@+id/action_chatFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
</navigation>